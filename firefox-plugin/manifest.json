{
    "manifest_version": 2,
    "name": "TimeBridge",
    "version": "1.0",
    "description": "A Firefox extension to combine Toggle and Github issues.",
    "background": {
        "scripts": [
            "axios.min.js",
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "https://api.github.com/",
        "https://api.track.toggl.com/"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
    }
}
